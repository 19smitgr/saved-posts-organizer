{
  "name": "Saved posts organizer",
  "version": "1.0",
  "manifest_version": 2,

  "minimum_chrome_version": "46",
  "content_security_policy": "script-src 'self' 'sha256-WOdSzz11/3cpqOdrm89LBL2UPwEU9EhbDtMy2OciEhs='",

  "description": "Lets you display and organize saved posts from your reddit account.",
  "icons": {
    "128": "images/logo.png"
  },

  "browser_action": {
     "default_title": "Saved posts organizer",
     "default_popup": "popup.html"
   },

  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["jquery.js", "snoowrap-v1.js","background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }

}
